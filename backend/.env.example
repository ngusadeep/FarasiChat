# ─── Common ──────────────────────────────────────────────
NODE_ENV=development
PORT=3000

# ─── App Details ─────────────────────────────────────────
APP_NAME=FarasiChat
APP_DESCRIPTION=Swahili AI Assistant powered by fine-tuned Gemma

# ─── JWT Config ──────────────────────────────────────────
JWT_SECRET=your_super_secret_key
JWT_EXPIRES_IN=7d

# ─── Database ────────────────────────────────────────────
DB_TYPE=postgres
DB_HOST=farasi_db     # "db" when running via docker-compose, "localhost" for local
DB_PORT=5435
DB_USERNAME=postgres
DB_PASSWORD=123456@secret
DB_DATABASE=farasi
DB_LOGGING=false
DB_SYNC=false             # ✅ use migrations in production (true only for dev)

# ─── AI Model / HuggingFace ──────────────────────────────
HF_API_URL=https://api-inference.huggingface.co/models/Nadhari/gemma-3n-swahili-E2B-it
HUGGINGFACE_API_KEY=your_hf_token_here
